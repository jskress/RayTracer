chapter = 10
title = 'Blended Patterns'

include '../defaults.igl'

// Floor
plane {
    material {
        pigment blend {
            linear stripes {
                ForestGreen, White
            },
            linear stripes {
                ForestGreen, White
                rotate Y 90
            }
            rotate Y 45
        }
        specular 0
    }
}
