// This holds the information for how to render our image for chapter 10.

chapter = 10

include '../default-context.igl'

camera {
	location [0, 1.5, -5]
	look at [0, 1, 0]
	field of view 60
}

point light {
	location [-10, 10, -10]
}

// Floor
plane {
	material {
		pigment blend {
			stripe {
				ForestGreen, White
			},
			stripe {
				ForestGreen, White
				rotate Y 90
			}
			rotate Y 45
		}
		specular 0
	}
}
