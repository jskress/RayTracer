// This holds the information for how to render our image for chapter 10.

chapter = 10
title = 'A Floor with Nested Striping'

include '../defaults.igl'

// Floor
plane {
	material {
		pigment checker {
			linear stripes {
				DarkBlue, AliceBlue
				scale 0.33
				rotate Y -33
			},
			linear stripes {
				Yellow, Red
				scale 0.25
				rotate Y 33
			}
		}
		specular 0
	}
}
