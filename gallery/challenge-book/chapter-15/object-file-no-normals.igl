// This holds the information for how to render our image for chapter 15 (new language).

chapter = 15
title = 'A Simple Teddy Bear'

include '../defaults.igl'

// Floor
plane {
    material {
        pigment checker { LightSkyBlue, SkyBlue rotate Y 37 }
    }
}

// Pulled from MIT: https://groups.csail.mit.edu/graphics/classes/6.837/F03/models/teddy.obj
object file {
    source 'teddy.obj'
    material { pigment SandyBrown }
    scale 0.07
    rotate Y 170
    translate Y 1.5
}
